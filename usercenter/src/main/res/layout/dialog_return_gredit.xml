<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dp296"
        android:layout_height="@dimen/dp250"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radius10_white_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_surrender_certificate"
            android:layout_marginTop="@dimen/dp35"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_hint"
            android:layout_marginTop="@dimen/dp25"
            android:textSize="17sp"
            android:textColor="#333333"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/dp120"
                android:text="@string/confirm"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/radius4dp_green_shape"
                android:layout_height="@dimen/dp42"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp120"
                android:text="@string/cancel"
                android:gravity="center"
                android:background="@drawable/radius4dp_white_shape"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_height="@dimen/dp42"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>