<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp296"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radius10_white_shape"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dp24"
        android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_tips"
                    android:layout_marginTop="@dimen/dp34"
                    />


                <TextView
                    android:id="@+id/tv_hint_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_hint_msg"
                    android:layout_marginHorizontal="@dimen/dp25"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp25"
                    />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="@dimen/dp255"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_height="@dimen/dp42"
                    android:background="@drawable/radius4dp_green_shape"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16sp"
                    />
    </LinearLayout>

</LinearLayout>