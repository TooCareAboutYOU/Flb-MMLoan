<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- pressed 特别注意排放顺序呢-->
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/dp25" />
			<gradient android:angle="45" android:centerColor="@color/color_middle" android:endColor="@color/color_end" android:startColor="@color/color_start" android:type="linear" />
		</shape>
	</item>
	<!-- focus -->
	<item android:state_enabled="true">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/dp25" />
			<gradient android:angle="45" android:centerColor="@color/color_middle" android:endColor="@color/color_end" android:startColor="@color/color_start" android:type="linear" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/dp25" />
			<solid android:color="@color/gray_e5e5e5" />
		</shape>
	</item>
</selector>