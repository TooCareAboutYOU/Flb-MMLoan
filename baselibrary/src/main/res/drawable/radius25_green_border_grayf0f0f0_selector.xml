<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp25" />
            <gradient android:angle="45" android:centerColor="@color/color_middle" android:endColor="@color/color_end" android:startColor="@color/color_start" android:type="linear" />
        </shape>
    </item>
    <!-- pressed 特别注意排放顺序呢-->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp25" />
            <gradient android:angle="45" android:centerColor="@color/color_middle" android:endColor="@color/color_end" android:startColor="@color/color_start" android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp25" />
            <stroke android:width="@dimen/dp1" android:color="@color/gray_f0f0f0"/>
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>