<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:background="@drawable/shape_radius5_stroke_efefef"
    android:padding="@dimen/dp12"
    android:id="@+id/cl_ContainerView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:background="@color/bg_F5F5F5"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acImg_Channel_Statues"
        android:layout_width="@dimen/dp16"
        android:layout_height="@dimen/dp16"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acImg_ChannelIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@+id/acImg_Channel_Statues"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:src="@drawable/img_channels_rd_9" />

</androidx.constraintlayout.widget.ConstraintLayout>
