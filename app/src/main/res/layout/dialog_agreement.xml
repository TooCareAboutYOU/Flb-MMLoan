<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="@dimen/dp18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:background="@drawable/radius4_white_shape"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_title"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <WebView
                android:id="@+id/web_agree"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/dp0"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp24"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp42"
                android:layout_marginBottom="@dimen/dp20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_disagree"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radius4_grayfff1f1f1_shape"
                    android:gravity="center"
                    android:text="Disagree"
                    android:textColor="@color/black_333333" />

                <TextView
                    android:id="@+id/btn_agree"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/radius4dp_green_shape"
                    android:gravity="center"
                    android:text="Agree"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>