<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/view_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp25"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/my_authentication"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />
        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/certificatemain_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_F7F6F9"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_options"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:padding="@dimen/dp14"
                android:layout_weight="1"
                android:overScrollMode="never" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_begin_certification"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@drawable/radius0_btn_main"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/start_authentication"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</layout>