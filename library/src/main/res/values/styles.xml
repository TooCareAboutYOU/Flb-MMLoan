<resources>

    <style name="ZoomInZoomOutAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_zoom_out</item>
    </style>

    <style name="SlideLeftInRightOutAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <declare-styleable name="VerificationCodeView">
        <attr name="isNetCode" format="boolean" />
        <attr name="codeNumber" format="integer" />
    </declare-styleable>
</resources>
